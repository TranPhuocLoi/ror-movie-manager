      .banner__wrap
        .banner__title.h3 Unique views this month 5678 views
        = link_to 'Add New Movie', new_admin_movie_path, class:'banner__btn btn btn_white'
  .page__stat.page__stat_pt32
    .sorting
      .sorting__row
        .sorting__col
          .sorting__dropdowns
            .dropdown.js-dropdown
              .dropdown__head.js-dropdown-head Last 30 days
              .dropdown__body.js-dropdown-body
                a.dropdown__item href="#" 
                  .dropdown__title.title Bento 3D Kit
                  .dropdown__info.caption Illustration
                a.dropdown__item href="#" 
